<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/item_name_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/black"
                android:text="Pay As You Go"
                />
            <TextView
                android:id="@+id/item_fare"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="$2.00"
                android:textColor="@color/color5"
                />
            <TextView
                android:id="@+id/item_matter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginRight="20dp"
                android:text="@string/msg_data"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_alignParentRight="true">
         <com.example.santhos.surya.MyView
             android:id="@+id/my_custom_view"
             android:layout_width="120dp"
             android:layout_alignParentEnd="true"
             android:layout_height="35dp"
             android:layout_alignParentRight="true">
         </com.example.santhos.surya.MyView>
            <TextView
                android:id="@+id/rs_fare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 0.00"
                android:textColor="@color/colorAccent"
                android:layout_below="@id/my_custom_view"
                android:layout_alignParentEnd="true"
                android:padding="10dp"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
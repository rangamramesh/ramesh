<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.santhos.surya.fragments.Step_two_fragment">
        <TextView
            android:id="@+id/welcome_head2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Pament Selection"
            android:textSize="15sp"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/secure_message"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="Payments are securely processed using a Credit Cards"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:padding="20dp"
            android:background="@drawable/light_gray_stroke"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/credit_card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credit Card"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </LinearLayout>

        <CheckBox
            android:id="@+id/save_pament_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="Save this payment for future use?"/>
        <TextView
            android:text="A receipt email will be sent to"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="5dp"
            android:id="@+id/recipt_mail_textview"/>
        <TextView
            android:id="@+id/three_next_step_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="Continue      >"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white"
            android:background="@drawable/big_btn_bg"
            />
        <TextView
            android:id="@+id/three_back_step_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="@string/back_to_cart_review"
            android:textStyle="bold"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@drawable/no_bg_curve"
            />
    </LinearLayout>
</ScrollView>
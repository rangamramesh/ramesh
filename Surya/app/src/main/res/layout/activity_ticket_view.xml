<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:background="@color/Bisque"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/Bisque"
    android:layout_height="match_parent"
    tools:context="com.example.santhos.surya.Activites.TicketViewActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="@drawable/ticket_stroke">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical"
            android:background="@color/AliceBlue">
            <TextView
                android:id="@+id/ticket_head"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Ticket"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="This is your Pass"
                android:textColor="@color/BlueViolet"/>
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:src="@drawable/credit_card"
                />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <RelativeLayout
                    android:id="@+id/relative"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/ticket_fare_textviw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30.00$"
                        android:textSize="30dp"
                        android:textStyle="bold"
                        android:textColor="@color/Brown"
                        android:gravity="center" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genfare"
                        android:gravity="center"
                        android:textSize="30dp"
                        android:textStyle="bold"/>
                </RelativeLayout>
            </FrameLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Local routes" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Frequent Rider"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Total Fare 60.00$" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="Active 10.38AM-11.50AM"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</ScrollView>
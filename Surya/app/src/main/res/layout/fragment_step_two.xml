<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.santhos.surya.fragments.Step_two_fragment">
    <TextView
        android:id="@+id/welcome_head2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15sp"
        android:layout_margin="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/carts_recycler_view"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/no_bg_curve"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/light_gray_curve"
        android:layout_margin="10dp"
        android:padding="3dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:layout_weight="3"
        android:id="@+id/charge_textview"
        android:background="@drawable/light_gray_curve"
        />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="15sp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/color10"
            android:id="@+id/total_fare"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/two_next_step_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="Continue      >"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textColor="#ffff"
        android:background="@drawable/big_btn_bg"
        />
    <TextView
        android:id="@+id/back_step_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:text="@string/add_more_products"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:background="@drawable/no_bg_curve"
        />
</LinearLayout>
</ScrollView>